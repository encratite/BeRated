@using BeRated
@using BeRated.Model
@using System.Collections.Generic

@model List<AllPlayerStatsModel>

@{
    Layout = "/Layout";
    ViewBag.Title = "Overview";
}

<h1 class="title">Player Class</h1>
<div class="frameworkSelector">
    <span>.NET Framework 4.6 and 4.5</span>
    <span id="frameworkSelector">Other Versions <i class="fa fa-caret-down"></i></span>
    <ul id="frameworkPopup">
        <li><a href="/All?days=7">Past week</a></li>
        <li><a href="/All?days=14">Past two weeks</a></li>
        <li><a href="/All?days=30">Past month</a></li>
        <li><a href="/All?days=90">Past three months</a></li>
        <li><a href="/">Everything</a></li>
    </ul>
</div>
<p class="description">A block-level flow content element that provides a grid-based presentation of a player's skill organized by rows and columns.</p>
<table class="sortable numericTable">
    <tbody>
        <tr>
            <th class="string">Name</th>
            <th>Kill/death ratio</th>
            <th>Kills</th>
            <th>Deaths</th>
            <th>Games won</th>
            <th>Games played</th>
            <th>Rounds won</th>
            <th>Rounds played</th>
        </tr>
        @foreach (var player in Model) {
            <tr>
                <td><a href="/Player?id=@player.Id">@player.Name</a></td>
                <td>@(player.KillDeathRatio.HasValue ? player.KillDeathRatio.Value.ToString("0.00") : "")</td>
                <td>@player.Kills</td>
                <td>@player.Deaths</td>
                <td>@RatingApp.GetPercentage(player.GameWinRatio)</td>
                <td>@player.GamesPlayed</td>
                <td>@RatingApp.GetPercentage(player.RoundWinRatio)</td>
                <td>@player.RoundsPlayed</td>
            </tr>
        }
    </tbody>
</table>
@using BeRated.App
@using BeRated.Model

@model PlayerWeapons

@{
    Layout = "/Layout";
    ViewBag.Title = Helper.GetTitle("Weapons", Model.Name);
    ViewBag.SteamId = Model.SteamId;
}

<table class="sortable numericTable grid">
    <tr>
        <th class="string">Weapon</th>
        <th>Kills</th>
        <th>Headshots</th>
        <th>Headshot kill ratio</th>
    </tr>
    @foreach (var weapon in Model.Weapons) {
    <tr>
        <td>@weapon.Weapon</td>
        <td>@weapon.Kills</td>
        <td>@weapon.Headshots</td>
        <td>@Helper.Percentage(weapon.HeadshotRatio)</td>
    </tr>
    }
</table>